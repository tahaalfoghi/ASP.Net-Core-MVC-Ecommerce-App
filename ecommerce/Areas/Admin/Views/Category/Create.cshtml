@model Category

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Create Category";
    
}

<div class="container">
    <form asp-action="Create" method="post" class="form" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" required id="Name" placeholder="Category Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input asp-for="Description" type="text" class="form-control" required id="txt" placeholder="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Add</button>
            <a class="btn btn-warning" asp-controller="Category" asp-action="Index">Back To Categories</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
            selector: '#txt'
        });
    </script>
}
